@{
    ViewData["Title"] = "Inicio - CFE Capacitaciones";
}

<style>
    /* Estilos Generales */
    .rounded-circle {
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .card {
        box-shadow: 0 0.15rem 1.75rem 0 rgba(33, 40, 50, 0.15);
    }

    /* Estilos del Header Principal */
    .header-container {
        background: linear-gradient(135deg, #006a40 0%, #008a54 100%);
        padding: 3rem 1rem;
        border-radius: 15px;
        margin-bottom: 2rem;
        color: white;
        text-align: center;
        position: relative;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        border-bottom: 4px solid #FFD700;
    }

        .header-container::before {
            content: "";
            position: absolute;
            bottom: -10px;
            left: 0;
            right: 0;
            height: 20px;
            background: url('data:image/svg+xml;utf8,<svg viewBox="0 0 1200 120" xmlns="http://www.w3.org/2000/svg"><path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" fill="%23ffffff" opacity=".25"/></svg>');
            background-size: cover;
        }

    .title-main {
        font-weight: 800;
        font-size: 2.5rem;
        letter-spacing: 1.5px;
        margin-bottom: 1rem;
        text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.3);
        position: relative;
        display: inline-block;
        color: white;
    }

        .title-main::after {
            content: "";
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 3px;
            background: #FFD700;
        }

    .subtitle {
        font-size: 1.3rem;
        max-width: 800px;
        margin: 0 auto 2rem;
        line-height: 1.6;
        opacity: 0.9;
        font-weight: 300;
        color: white;
    }

    .logo-container {
        transition: all 0.4s ease;
        margin-bottom: 1.5rem;
        filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.2));
        background-color: rgba(255, 255, 255, 0.2);
        padding: 15px;
        border-radius: 50%;
        display: inline-block;
        backdrop-filter: blur(5px);
        border: 2px solid rgba(255, 255, 255, 0.3);
    }

        .logo-container:hover {
            transform: scale(1.05) rotate(-2deg);
        }

        .logo-container img {
            max-height: 100px;
            width: auto;
        }

    .cfe-logo-header {
        max-height: 100px;
        margin: 0 auto 20px;
        display: block;
        filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
    }

    .header-content {
        margin-top: 20px;
    }

    /* Estilos del Carrusel */
    .carousel-cfe {
        position: relative;
        border-radius: 10px;
        overflow: hidden;
        margin-bottom: 2rem;
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15);
        height: 500px; /* Altura fija para el carrusel */
        display: flex;
        align-items: center;
    }

        .carousel-cfe::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            border: 3px solid #FFD700;
            border-radius: 8px;
            pointer-events: none;
            z-index: 10;
        }

        .carousel-cfe .carousel-inner {
            width: 100%;
            height: 100%; /* Asegura que el inner ocupe toda la altura del carrusel */
        }

        .carousel-cfe .carousel-item {
            height: 100%; /* ¡Importante! Asegura que cada item ocupe toda la altura disponible */
            width: 100%; /* Asegura que cada item ocupe todo el ancho disponible */
        }

        .carousel-cfe img {
            width: 100%;
            height: 100%; /* La imagen ocupará el 100% del alto de su padre (carousel-item) */
            object-fit: contain; /* ¡Importante! La imagen se escalará para caber completamente, sin recortarse */
            /* background-color: #000; */
        }
    /* ************************************************* */

    /* Controles del Carrusel */
    .carousel-control-prev,
    .carousel-control-next {
        background: rgba(255, 215, 0, 0.7);
        width: 40px;
        height: 40px;
        border-radius: 50%;
        top: 50%;
        transform: translateY(-50%);
        opacity: 0.8;
        transition: all 0.3s;
    }

        .carousel-control-prev:hover,
        .carousel-control-next:hover {
            opacity: 1;
            background: rgba(255, 215, 0, 0.9);
        }

    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        filter: drop-shadow(0 0 2px rgba(0, 0, 0, 0.5));
        width: 25px;
        height: 25px;
    }

    .carousel-caption-cfe {
        background: rgba(0, 138, 84, 0.7);
        border-radius: 5px;
        padding: 15px;
    }

    /* Media Queries para Responsive Design */
    @@media (max-width: 768px) {
        .title-main {
            font-size: 2rem;
        }

        .subtitle {
            font-size: 1.1rem;
        }

        .carousel-cfe {
            height: 300px; /* Ajuste de altura del carrusel para móviles */
        }

        .logo-container img {
            max-height: 80px;
        }

        .cfe-logo-header {
            max-height: 80px;
        }
    }
</style>

<div class="header-container">
    <div class="d-flex justify-content-center">
        <div class="logo-container mb-4" style="background-color: white; padding: 15px; border-radius: 8px; display: inline-block; box-shadow: 0 4px 8px rgba(0,0,0,0.15); transition: all 0.3s ease; border: 2px solid #FFD700;">
            <img src="~/images/logo-cfe-capacitaciones.png" alt="CFE Capacitaciones" class="img-fluid" style="max-height: 100px; display: block;">
        </div>
    </div>
    <h1 class="title-main display-4 mb-3">Sistema de Control de Capacitaciones</h1>
    <p class="subtitle lead">
        Plataforma oficial para la gestión de capacitación del personal CFE
    </p>
</div>

<div class="container-fluid px-0">
    <div id="carouselCFE" class="carousel slide carousel-cfe" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/images/LTLRLH_27052025.jpg" class="d-block w-100" alt="Imagen LTLRLH">
            </div>
            <div class="carousel-item">
                <img src="/images/SEMOE_27052025.jpg" class="d-block w-100" alt="Imagen SEMOE">
            </div>
            <div class="carousel-item">
                <img src="/images/SELR_27052025.jpg" class="d-block w-100" alt="Imagen SELR">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselCFE" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Anterior</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselCFE" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Siguiente</span>
        </button>
    </div>
</div>

<div class="container">
</div>

@section Scripts {
    <script>
        var myCarousel = document.querySelector('#carouselCFE');
        var carousel = new bootstrap.Carousel(myCarousel, {
            interval: 5000,
            wrap: true
        });
    </script>
}