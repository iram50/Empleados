@{
    ViewData["Title"] = "Bienvenida";
}

<style>
    /* ESTILO PRINCIPAL */
    .welcome-container {
        max-width: 800px;
        margin: 2rem auto;
        animation: fadeIn 0.6s ease-out;
    }

    .welcome-card {
        border: none;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 106, 64, 0.2);
        background: linear-gradient(to bottom, #ffffff 0%, #f8f9fa 100%);
        border-top: 5px solid #006a40;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .welcome-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0, 106, 64, 0.25);
        }

    .welcome-header {
        background: linear-gradient(135deg, #006a40 0%, #008a54 100%);
        color: white;
        padding: 1.5rem;
        text-align: center;
    }

    .welcome-title {
        font-weight: 700;
        font-size: 2.2rem;
        margin-bottom: 0.5rem;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2);
    }

    .welcome-subtitle {
        font-size: 1.1rem;
        opacity: 0.9;
        margin-bottom: 1.5rem;
    }

    .welcome-body {
        padding: 2rem;
        text-align: center;
    }

    .welcome-icon {
        color: #008a54;
        font-size: 3rem;
        margin-bottom: 1.5rem;
        animation: bounce 2s infinite;
    }

    .welcome-message {
        font-size: 1.2rem;
        color: #495057;
        margin-bottom: 1.5rem;
        line-height: 1.6;
    }

    .system-info {
        margin-top: 2rem;
        padding: 1rem;
        background-color: rgba(0, 138, 84, 0.1);
        border-radius: 8px;
        border-left: 4px solid #006a40;
        font-size: 1.1rem;
        color: #343a40;
    }

    .welcome-message {
        font-weight: bold;
        font-size: 1.2rem;
        color: #495057;
        margin-bottom: 1.5rem;
        line-height: 1.6;
    }

    
</style>

<!-- Font Awesome para iconos -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<div class="welcome-container">
    <div class="card welcome-card">
        <div class="welcome-header">
            <h1 class="welcome-title">¡Bienvenido, @ViewBag.Nombre!</h1>
            <p class="welcome-subtitle">Sistema de Control de Capacitaciones CFE</p>
        </div>

        <div class="welcome-body">
            <div class="welcome-icon">
                <i class="fas fa-handshake"></i>
            </div>

            <p class="welcome-message">
                Usa el menú superior para navegar por las diferentes secciones del sistema.
            </p>
            @if (User.IsInRole("Admin"))
            {
            <p class="welcome-message fw-bold text-uppercase text-success fs-5 mb-3" style="letter-spacing: 1.5px;">
                Opciones Administrativas
            </p>

                <div class="d-flex justify-content-center gap-4 mb-4">
                    <a asp-controller="Usuarios" asp-action="Index" class="btn btn-cfe px-4 py-2 fw-semibold shadow-sm" style="font-weight: 600;">
                    <i class="fas fa-users me-2"></i> Administrar Usuarios
                </a>
                <a asp-controller="Usuarios" asp-action="CambiarLogo" class="btn btn-cfe px-4 py-2 fw-semibold shadow-sm" style="font-weight: 600;">
                    <i class="fas fa-image me-2"></i> Cambiar Logo
                </a>
            </div>
            }
            <div class="system-info fst-italic small" style="color: #2d5230;">
                <i class="fas fa-building me-2"></i>
                Sistema de Control de Capacitaciones al Personal Residencia Regional de Construcción Noroeste
            </div>

        </div>
    </div>
</div>