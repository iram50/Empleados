@model CFE.Models.Area

@{
    ViewData["Title"] = "Eliminar Área";
}

<div class="card shadow-lg border-danger">
    <div class="card-header bg-danger text-white">
        <h3 class="mb-0">
            <i class="bi bi-exclamation-triangle-fill"></i> @ViewData["Title"]
        </h3>
    </div>

    <div class="card-body">
        <div class="alert alert-warning" role="alert">
            <h4 class="alert-heading"><i class="bi bi-exclamation-octagon"></i> ¡Atención!</h4>
            <p>¿Estás seguro que deseas eliminar permanentemente este área? Esta acción no se puede deshacer.</p>
            <hr>
            <p class="mb-0">Se eliminarán todos los datos asociados a este registro.</p>
        </div>

        <!-- Contenedor con borde para mostrar el nombre del área -->
        <div class="p-4 border rounded text-center">
            <h5 class="text-muted mb-3">Área a eliminar:</h5>
            <h4 class="text-danger fw-bold">@Model.DescripcionArea</h4>
        </div>
    </div>

    <div class="card-footer bg-light">
        <form asp-action="Delete" class="d-flex justify-content-between">
            <input type="hidden" asp-for="IdAreas" />

            <div>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Cancelar y volver
                </a>
            </div>

            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash-fill"></i> Confirmar eliminación
            </button>
        </form>
    </div>
</div>

@section Styles {
    <style>
        .border-danger {
            border: 1px solid #dc3545 !important;
        }

        .card-header {
            font-weight: 600;
        }

        .alert {
            border-left: 4px solid #ffc107;
        }
    </style>
}
