@model CFE.Models.Area

@{
    ViewData["Title"] = "Detalles del Área";
}

<div class="card shadow-sm">
    <div class="card-header bg-cfe text-white">
        <h4 class="mb-0">
            <i class="bi bi-info-circle"></i> Detalles del Área
        </h4>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-12">
                <h5 class="text-muted mb-3">Descripción del Área</h5>
                <div class="p-3 bg-light rounded">
                    @Html.DisplayFor(model => model.DescripcionArea)
                </div>
            </div>
        </div>
    </div>

    <div class="card-footer">
        <div class="d-flex justify-content-between align-items-center">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Volver al listado
            </a>

            <div class="my-3"></div>

        </div>
    </div>
</div>

@section Styles {
    <style>
        .bg-cfe {
            background-color: #008a54 !important;
        }

        .btn-cfe {
            background-color: #008a54 !important;
            color: white !important;
            border: none !important;
        }

            .btn-cfe:hover {
                background-color: #006f45 !important;
                color: white !important;
            }
    </style>
}
