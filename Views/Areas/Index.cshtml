@model IEnumerable<CFE.Models.Area>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DescripcionArea)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionArea)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.IdAreas" class="btn btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.IdAreas" class="btn btn-secondary">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.IdAreas" class="btn btn-danger">Delete</a>
                </td>
        </tr>
}
    </tbody>
</table>
