@model IEnumerable<CFE.Models.Area>

@{
    ViewData["Title"] = "Gestión de Áreas";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-6">
        <i class="bi bi-building"></i> @ViewData["Title"]
    </h1>

    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-cfe">
            <i class="bi bi-plus-circle"></i> Nueva Área
        </a>
    }
</div>

<div class="table-responsive">
    <table class="table table-hover table-striped">
        <thead class="table-light">
            <tr>
                <th class="text">Areas</th>
                <th class="text-end">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.DescripcionArea)
                    </td>
                    <td class="text-end">
                        <div class="btn-group" role="group">
                            @if (User.IsInRole("Admin") || User.IsInRole("Moder"))
                            {
                                <a asp-action="Edit" asp-route-id="@item.IdAreas" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil"></i> Editar
                                </a>
                            }

                            <a asp-action="Details" asp-route-id="@item.IdAreas" class="btn btn-info btn-sm">
                                <i class="bi bi-eye"></i> Detalles
                            </a>

                            @if (User.IsInRole("Admin") || User.IsInRole("Moder"))
                            {
                                <a asp-action="Delete" asp-route-id="@item.IdAreas" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Eliminar
                                </a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
