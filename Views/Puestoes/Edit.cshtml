@model CFE.Models.Puesto
@using CFE.Models

@{
    ViewData["Title"] = "Editar Puesto";
    var puestosList = ViewData["PuestosList"] as IEnumerable<Puesto> ?? new List<Puesto>();
    var isNew = Model?.IdPuesto == 0;
}

<div class="container-fluid">
    <div class="row">
        <!-- Columna de lista de puestos -->
        <div class="col-md-5">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-list-ul"></i> Puestos Existentes</h5>
                    <a asp-action="Create" class="btn btn-cfe btn-sm">
                        <i class="bi bi-plus-circle"></i> Nuevo
                    </a>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        @if (!isNew)
                        {
                            @foreach (var puesto in puestosList)
                            {
                                <a asp-action="Edit" asp-route-id="@puesto.IdPuesto"
                                   class="list-group-item list-group-item-action @(puesto.IdPuesto == Model?.IdPuesto ? "active" : "")">
                                    <div class="d-flex justify-content-between">
                                        <span>@puesto.DescripcionPuesto</span>
                                    </div>
                                </a>
                            }
                        }
                        else
                        {
                            <div class="alert alert-info m-3">
                                <i class="bi bi-info-circle"></i> Seleccione un puesto existente para editarlo o complete el formulario para crear uno nuevo.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Columna de edición -->
        <div class="col-md-7">
            <div class="card shadow-sm">
                <div class="card-header bg-cfe text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-pencil-square"></i> @(isNew ? "Nuevo Puesto" : "Editar Puesto")
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="@(isNew ? "Create" : "Edit")">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        @if (!isNew)
                        {
                            <input type="hidden" asp-for="IdPuesto" />
                        }

                        <div class="form-group mb-4">
                            <label asp-for="DescripcionPuesto" class="form-label fw-bold">Descripción del Puesto</label>
                            <input asp-for="DescripcionPuesto" class="form-control" />
                            <span asp-validation-for="DescripcionPuesto" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Volver
                            </a>
                            <div class="btn-group">
                                <button type="submit" class="btn btn-warning px-4">
                                    <i class="bi bi-check2-circle"></i> Guardar
                                </button>
                                <a asp-action="Create" class="btn btn-secondary">
                                    <i class="bi bi-plus-circle"></i> Nuevo
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .bg-cfe {
            background-color: #008a54 !important;
        }

        .btn-cfe {
            background-color: #008a54 !important;
            color: white !important;
            border: none !important;
        }

            .btn-cfe:hover {
                background-color: #006f45 !important;
                color: white !important;
            }

        .list-group-item.active {
            background-color: #008a54;
            border-color: #008a54;
            color: white;
        }

        .list-group-item:hover:not(.active) {
            background-color: #f8f9fa;
        }

        .btn-group .btn {
            margin-right: 5px;
        }

            .btn-group .btn:last-child {
                margin-right: 0;
            }

        .card {
            border-radius: 0.5rem;
        }

        .list-group-item {
            border-left: none;
            border-right: none;
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}