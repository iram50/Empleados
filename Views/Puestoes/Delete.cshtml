@model CFE.Models.Puesto

@{
    ViewData["Title"] = "Eliminar Puesto";
}

<div class="card shadow-lg border-danger">
    <div class="card-header bg-danger text-white">
        <h3 class="mb-0">
            <i class="bi bi-exclamation-triangle-fill"></i> @ViewData["Title"]
        </h3>
    </div>

    <div class="card-body">
        <div class="alert alert-warning" role="alert">
            <h4 class="alert-heading"><i class="bi bi-exclamation-octagon"></i> ¡Atención!</h4>
            <p>¿Estás seguro que deseas eliminar permanentemente este puesto? Esta acción no se puede deshacer.</p>
            <hr>
            <p class="mb-0">Todos los registros asociados a este puesto se perderán.</p>
        </div>

        <div class="p-4 border rounded text-center">
            <h5 class="text-muted mb-3">Puesto a eliminar:</h5>
            <h4 class="text-danger fw-bold">@Model.DescripcionPuesto</h4>
        </div>
    </div>

    <div class="card-footer bg-light">
        <form asp-action="Delete" class="d-flex justify-content-between">
            <input type="hidden" asp-for="IdPuesto" />

            <div>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Cancelar y volver
                </a>
            </div>

            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash-fill"></i> Confirmar eliminación
            </button>
        </form>

        <div class="text-muted small mt-3">
            <i class="bi bi-info-circle"></i> Esta acción eliminará permanentemente el registro.
        </div>
    </div>
</div>

@section Styles {
    <style>
        .border-danger {
            border: 2px solid #dc3545;
        }

        .alert-warning {
            border-left: 5px solid #ffc107;
        }

        .card-header {
            font-size: 1.25rem;
            font-weight: 600;
        }
    </style>
}
