@model CFE.Models.Empleado

@{
    ViewData["Title"] = "Editar Empleado";
}

<h1>Editar Empleado</h1>

<h4>Datos del Empleado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdEmpleado" />

            <div class="form-group">
                <label asp-for="Rfc" class="control-label"></label>
                <input asp-for="Rfc" class="form-control" />
                <span asp-validation-for="Rfc" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Curp" class="control-label"></label>
                <input asp-for="Curp" class="form-control" />
                <span asp-validation-for="Curp" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nss" class="control-label"></label>
                <input asp-for="Nss" class="form-control" />
                <span asp-validation-for="Nss" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ApellidoPaterno" class="control-label"></label>
                <input asp-for="ApellidoPaterno" class="form-control" />
                <span asp-validation-for="ApellidoPaterno" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ApellidoMaterno" class="control-label"></label>
                <input asp-for="ApellidoMaterno" class="form-control" />
                <span asp-validation-for="ApellidoMaterno" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdArea" class="control-label"></label>
                <select asp-for="IdArea" class="form-control" asp-items="ViewBag.IdArea"></select>
                <span asp-validation-for="IdArea" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdPuesto" class="control-label"></label>
                <select asp-for="IdPuesto" class="form-control" asp-items="ViewBag.IdPuesto"></select>
                <span asp-validation-for="IdPuesto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Telefono" class="control-label"></label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CorreoElectronico" class="control-label"></label>
                <input asp-for="CorreoElectronico" class="form-control" />
                <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="tipo_contrato" class="control-label"></label>
                <input asp-for="tipo_contrato" class="form-control" />
                <span asp-validation-for="tipo_contrato" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="fecha_nacimiento" class="control-label"></label>
                <input asp-for="fecha_nacimiento" class="form-control" type="date" />
                <span asp-validation-for="fecha_nacimiento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ingreso_cfe" class="control-label"></label>
                <input asp-for="ingreso_cfe" class="form-control" type="date" />
                <span asp-validation-for="ingreso_cfe" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="rpe" class="control-label"></label>
                <input asp-for="rpe" class="form-control" />
                <span asp-validation-for="rpe" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="jefe_inmediato" class="control-label"></label>
                <input asp-for="jefe_inmediato" class="form-control" />
                <span asp-validation-for="jefe_inmediato" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="escolaridad" class="control-label"></label>
                <input asp-for="escolaridad" class="form-control" />
                <span asp-validation-for="escolaridad" class="text-danger"></span>
            </div>

            @if (Model.Foto != null && Model.Foto.Length > 0)
            {
                <div class="form-group">
                    <label class="control-label">Foto actual:</label>
                    <br>
                    <img id="imgPreview" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Foto)"
                         alt="Foto del empleado" width="150" height="150" style="border-radius: 10px;">
                </div>
            }
            else
            {
                <div class="form-group">
                    <label class="control-label">Foto actual:</label>
                    <p>No hay foto disponible.</p>
                </div>
            }
            <!-- Vista previa de la nueva imagen seleccionada -->
            <div class="form-group">
                <img id="newImgPreview" src="#" alt="Vista previa" width="150" height="150"
                     style="border-radius: 10px; display: none;">
            </div>

            <script>
                function previewImage(event) {
                    var reader = new FileReader();
                    reader.onload = function () {
                        var img = document.getElementById('imgPreview');
                        img.src = reader.result;
                        img.style.display = 'block'; // Mostrar la imagen si estaba oculta
                    };
                    reader.readAsDataURL(event.target.files[0]);
                }
            </script>

            <div class="form-group">
                <label class="control-label">Subir nueva foto</label>
                <input type="file" name="FotoArchivo" class="form-control" accept="image/*" />
            </div>

            <div class="form-group">
                <label asp-for="EmpleadoActivo" class="control-label"></label>
                <select asp-for="EmpleadoActivo" class="form-control">
                    <option value="true">Activo</option>
                    <option value="false">Inactivo</option>
                </select>
                <span asp-validation-for="EmpleadoActivo" class="text-danger"></span>
            </div>


            <div class="form-group mt-3">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
