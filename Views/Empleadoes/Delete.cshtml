@model CFE.Models.Empleado

@{
    ViewData["Title"] = "Eliminar";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-8">

            <div class="border border-3 border-danger rounded-4 shadow-lg p-5 bg-light">
                <div class="text-center mb-4">
                    <h1 class="text-danger fw-bold">Eliminar Empleado</h1>
                    <p class="fs-5">¿Estás seguro que deseas eliminar este empleado?</p>
                    <hr class="border-danger border-2 opacity-75" style="width: 60px; margin: auto;">
                </div>

                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-4">RFC</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Rfc)</dd>

                            <dt class="col-sm-4">CURP</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Curp)</dd>

                            <dt class="col-sm-4">NSS</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Nss)</dd>

                            <dt class="col-sm-4">Apellido Paterno</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.ApellidoPaterno)</dd>

                            <dt class="col-sm-4">Apellido Materno</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.ApellidoMaterno)</dd>

                            <dt class="col-sm-4">Nombre</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                            <dt class="col-sm-4">Área</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.IdAreaNavigation.DescripcionArea)</dd>

                            <dt class="col-sm-4">Puesto</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.IdPuestoNavigation.DescripcionPuesto)</dd>

                            <dt class="col-sm-4">Teléfono</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Telefono)</dd>

                            <dt class="col-sm-4">Correo</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.CorreoElectronico)</dd>


                            <dt class="col-sm-4">Nacimiento</dt>
                            <dd class="col-sm-8">@Model.fecha_nacimiento?.ToString("dd/MM/yyyy")</dd>

                            <dt class="col-sm-4">Ingreso CFE</dt>
                            <dd class="col-sm-8">@Model.ingreso_cfe?.ToString("dd/MM/yyyy")</dd>

                            <dt class="col-sm-4">RPE</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.rpe)</dd>

                            <dt class="col-sm-4">Jefe inmediato</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.jefe_inmediato)</dd>

                            <dt class="col-sm-4">Escolaridad</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.escolaridad)</dd>

                            <dt class="col-sm-4">Residencia/Especialidad</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.residencia_especialidad)</dd>

                            <dt class="col-sm-4">Activo</dt>
                            <dd class="col-sm-8">@((Model.EmpleadoActivo ?? false) ? "Sí" : "No")</dd>

                            <dt class="col-sm-4">Foto</dt>
                            <dd class="col-sm-8">
                                @if (Model.Foto != null && Model.Foto.Length > 0)
                                {
                                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Foto)" alt="Foto del empleado" width="150" class="img-thumbnail shadow-sm" />
                                }
                                else
                                {
                                    <span>No hay imagen disponible</span>
                                }
                            </dd>

                        </dl>
                    </div>
                </div>

                <form asp-action="DeleteEmpleado" asp-route-id="@Model.IdEmpleado" method="post">
                    <div class="d-flex justify-content-center gap-4">
                        <button type="submit" class="btn btn-outline-danger btn-lg">
                            <i class="bi bi-trash-fill me-1"></i> Eliminar
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-x-circle me-1"></i> Cancelar
                        </a>
                    </div>
                </form>

            </div>

        </div>
    </div>
</div>
