@model CFE.Models.Usuario

@{
    ViewData["Title"] = "Agregar Usuario";
}

<style>
    :root {
        --primary-green: #008a54;
        --light-green: #e6f5ee;
        --dark-green: #006b41;
    }

    body {
        background-color: #f8f9fa;
    }

    .card {
        border-color: var(--light-green);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
    }

    .card-header {
        background-color: var(--primary-green);
        color: white;
        font-weight: bold;
        border-bottom: 1px solid var(--primary-green);
    }

    /* Estilos para el formulario */
    .form-control,
    .form-select {
        border-color: var(--primary-green);
    }

        .form-control:focus,
        .form-select:focus {
            border-color: var(--dark-green);
            box-shadow: 0 0 0 0.25rem rgba(0, 138, 84, 0.25); /* Green with 25% opacity */
        }

    .btn-primary {
        background-color: var(--primary-green);
        border-color: var(--primary-green);
        transition: background-color 0.3s ease, border-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: var(--dark-green);
            border-color: var(--dark-green);
        }

    .btn-outline-secondary {
        border-color: var(--primary-green);
        color: var(--primary-green);
    }

        .btn-outline-secondary:hover {
            background-color: var(--primary-green);
            color: white;
        }

    /* Estilos específicos para la vista de agregar/editar */
    .form-card {
        max-width: 600px; /* Limita el ancho del formulario para mejor estética */
        margin: 50px auto; /* Centra el contenedor y le da margen superior */
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.08);
    }

        .form-card .card-header {
            background-color: var(--primary-green);
            color: white;
            font-weight: bold;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
        }

        .form-card .card-body {
            padding: 2rem;
        }

        .form-card h2 {
            text-align: center;
            color: var(--primary-green);
            margin-bottom: 1.5rem;
        }

    .form-actions {
        display: flex;
        gap: 0.75rem; /* Espacio entre los botones */
        justify-content: flex-end; /* Alinea los botones a la derecha */
        margin-top: 2rem;
    }

</style>

<div class="container py-4">
    <div class="card form-card">
        <div class="card-header text-center">
            <i class="fas fa-user-plus me-2"></i> Crear Nuevo Usuario
        </div>
        <div class="card-body">
            <h2 class="text-center mb-4">Ingrese los datos del nuevo usuario</h2>
            <hr class="mb-4" />

            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label fw-bold">Nombre completo:</label>
                    <input asp-for="Nombre" class="form-control" required />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="UsuarioNombre" class="form-label fw-bold">Nombre de usuario:</label>
                    <input asp-for="UsuarioNombre" class="form-control" required />
                    <span asp-validation-for="UsuarioNombre" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Clave" class="form-label fw-bold">Contraseña:</label>
                    <input asp-for="Clave" class="form-control" type="password" required />
                    <span asp-validation-for="Clave" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="RolId" class="form-label fw-bold">Rol:</label>
                    <select asp-for="RolId" class="form-select">
                        @foreach (var rol in ViewBag.Roles)
                        {
                            <option value="@rol.Id_Rol">@rol.Nombre_Rol</option>
                        }
                    </select>
                    <span asp-validation-for="RolId" class="text-danger"></span>
                </div>
                <div class="form-actions">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-times-circle me-2"></i>Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Guardar Usuario
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}