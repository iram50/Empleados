@model CFE.Models.Instructor

@{
    ViewData["Title"] = "Crear Nuevo Instructor";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-6">
                <i class="bi bi-person-badge"></i> @ViewData["Title"]
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-cfe text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-plus-circle"></i> Información del Instructor
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="form-group mb-4">
                            <label asp-for="NombreInstructor" class="form-label fw-bold">Nombre del Instructor</label>
                            <input asp-for="NombreInstructor" class="form-control" placeholder="Ingrese el nombre completo" />
                            <span asp-validation-for="NombreInstructor" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Descripcion" class="form-label fw-bold">Descripción/Nivel</label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Especialidad, nivel de experiencia o información relevante"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary me-3">
                                <i class="bi bi-arrow-left"></i> Volver al listado
                            </a>
                            <button type="submit" class="btn btn-cfe px-4">
                                <i class="bi bi-save"></i> Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .btn-cfe {
            background-color: #008a54 !important;
            color: white !important;
            border: none !important;
        }

            .btn-cfe:hover {
                background-color: #006f45 !important;
                color: white !important;
            }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

