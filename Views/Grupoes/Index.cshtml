@model IEnumerable<CFE.Models.Grupo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Fechainicial)</th>
            <th>@Html.DisplayNameFor(model => model.FechaFinal)</th>
            <th>Horas</th>
            <th>@Html.DisplayNameFor(model => model.Lugar)</th>
            <th>@Html.DisplayNameFor(model => model.Comentarios)</th>
            <th>@Html.DisplayNameFor(model => model.Instructor)</th>
            <th>@Html.DisplayNameFor(model => model.AreaOfrece)</th>
            <th>@Html.DisplayNameFor(model => model.Status)</th>
            <th>Curso</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(item.Fechainicial?.ToString("dd/MM/yyyy"))</td>
                <td>@(item.FechaFinal?.ToString("dd/MM/yyyy"))</td>
                <td>@Html.DisplayFor(modelItem => item.Horario)</td>
                <td>@Html.DisplayFor(modelItem => item.Lugar)</td>
                <td>@Html.DisplayFor(modelItem => item.Comentarios)</td>
                <td>@Html.DisplayFor(modelItem => item.Instructor)</td>
                <td>@Html.DisplayFor(modelItem => item.AreaOfrece)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>@item.IdCursoNavigation.NombreCurso</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ClaveGrupo">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ClaveGrupo">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ClaveGrupo">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
