@model CFE.Models.Grupo

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Grupo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="IdCurso" class="control-label"></label>
                <select asp-for="IdCurso" class="form-control" asp-items="ViewBag.IdCurso"></select>
            </div>

            <div class="form-group">
                <label asp-for="Fechainicial" class="control-label"></label>
                <input asp-for="Fechainicial" class="form-control" type="date" />
                <span asp-validation-for="Fechainicial" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaFinal" class="control-label"></label>
                <input asp-for="FechaFinal" class="form-control" type="date" />
                <span asp-validation-for="FechaFinal" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Cantidad de Horas</label>
                <input asp-for="Horario" class="form-control" />
                <span asp-validation-for="Horario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Lugar" class="control-label"></label>
                <select asp-for="Lugar" class="form-control">
                    <option value="">Seleccione una opción</option>
                    <option value="Interno">Interno</option>
                    <option value="Externo">Externo</option>
                </select>
                <span asp-validation-for="Lugar" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Comentarios" class="control-label"></label>
                <input asp-for="Comentarios" class="form-control" />
                <span asp-validation-for="Comentarios" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdInstructor" class="control-label"></label>
                <input asp-for="IdInstructor" class="form-control" />
                <span asp-validation-for="IdInstructor" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AreaOfrece" class="control-label"></label>
                <input asp-for="AreaOfrece" class="form-control" />
                <span asp-validation-for="AreaOfrece" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="Activo">Activo</option>
                    <option value="Inactivo">Inactivo</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdEmpleado" class="control-label"></label>
                <select asp-for="IdEmpleado" class="form-control" asp-items="ViewBag.IdEmpleado"></select>
            </div>

            <div class="form-group">
                <label asp-for="Calificacion" class="control-label"></label>
                <input asp-for="Calificacion" class="form-control" />
            </div>



            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
