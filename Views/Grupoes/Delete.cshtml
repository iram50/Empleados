@model CFE.Models.Grupo

@{
    ViewData["Title"] = "Eliminar Grupo";
}

<style>
    :root {
        --primary-green: #008a54;
        --light-green: #e6f5ee; /* A lighter shade for backgrounds or borders */
        --dark-green: #006b41; /* A darker shade for hover states or active elements */
    }

    body {
        background-color: #f8f9fa; /* Light background for the page */
    }

    .card {
        border-color: var(--light-green);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
    }

    .card-header {
        background-color: var(--primary-green);
        color: white;
        font-weight: bold;
        border-bottom: 1px solid var(--primary-green);
    }

    .btn-primary {
        background-color: var(--primary-green);
        border-color: var(--primary-green);
        transition: background-color 0.3s ease, border-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: var(--dark-green);
            border-color: var(--dark-green);
        }

    /* Estilos específicos para la vista de eliminar */
    .delete-confirmation-card {
        border: 2px solid #dc3545; /* Borde rojo para destacar peligro */
        box-shadow: 0 6px 12px rgba(220, 53, 69, 0.1); /* Sombra roja sutil */
    }

        .delete-confirmation-card .card-header {
            background-color: #dc3545; /* Fondo rojo para el encabezado */
            color: white;
        }

        .delete-confirmation-card h2 {
            color: #dc3545; /* Texto del título en rojo */
        }

        .delete-confirmation-card hr {
            border-top: 1px solid rgba(0, 0, 0, 0.1); /* Separador estándar */
        }

        /* Estilos para los nombres de las propiedades */
        .delete-confirmation-card dt {
            font-weight: 600; /* Hace los nombres de las propiedades más visibles */
            color: #343a40; /* Color oscuro para el texto */
        }

        .delete-confirmation-card dd {
            color: #6c757d; /* Color gris para los valores */
        }

    /* Alineación de los botones */
    .delete-actions {
        display: flex;
        gap: 0.75rem; /* Espacio entre los botones */
        margin-top: 1.5rem; /* Margen superior para separarlos de la información */
        justify-content: flex-end; /* Alinea los botones a la derecha */
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .btn-outline-secondary {
        border-color: #6c757d;
        color: #6c757d;
    }

        .btn-outline-secondary:hover {
            background-color: #6c757d;
            color: white;
        }

</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card delete-confirmation-card">
                <div class="card-header text-center">
                    <i class="fas fa-exclamation-triangle me-2"></i> Confirmar Eliminación
                </div>
                <div class="card-body">
                    <h2 class="text-center mb-4">¿Estás seguro de que quieres eliminar esto?</h2>
                    <p class="text-center text-muted mb-4">Esta acción es irreversible y no se podrá deshacer.</p>

                    <h4 class="mb-3 text-center">Detalles del Grupo</h4>
                    <hr />

                    <dl class="row mb-4">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.FechaInicial)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.FechaInicial)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.FechaFinal)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.FechaFinal)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Horario)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Horario)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Lugar)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Lugar)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Comentarios)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Comentarios)
                        </dd>
                        <dt class="col-sm-4">
                            Instructor
                        </dt>
                        <dd class="col-sm-8">
                            @* Assuming IdInstructorNavigation.NombreInstructor exists for display *@
                            @(Model.IdInstructorNavigation != null ? Model.IdInstructorNavigation.NombreInstructor : "N/A")
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.AreaOfrece)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.AreaOfrece)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Status)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Status)
                        </dd>
                        <dt class="col-sm-4">
                            Curso
                        </dt>
                        <dd class="col-sm-8">
                            @* Assuming IdCursoNavigation.NombreCurso exists for display *@
                            @(Model.IdCursoNavigation != null ? Model.IdCursoNavigation.NombreCurso : "N/A")
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Calificacion)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Calificacion)
                        </dd>
                        <dt class="col-sm-4">
                            Empleado
                        </dt>
                        <dd class="col-sm-8">
                            @* Assuming IdEmpleadoNavigation.Nombre (or similar) exists for display *@
                            @(Model.IdEmpleadoNavigation != null ? Model.IdEmpleadoNavigation.Nombre : "N/A")
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ClaveGrupo" />
                        <div class="delete-actions">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash-alt me-2"></i>Eliminar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>