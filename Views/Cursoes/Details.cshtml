@model CFE.Models.Curso

@{
    ViewData["Title"] = "Detalles del Curso";
}

<div class="card shadow-sm">
    <div class="card-header bg-cfe text-white">
        <h4 class="mb-0">
            <i class="bi bi-info-circle"></i> Detalles del Curso
        </h4>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-12">
                <h5 class="text-muted mb-3">Información del Curso</h5>
                <dl class="row p-3 bg-light rounded">
                    <dt class="col-sm-4">Nombre del Curso</dt>
                    <dd class="col-sm-8">@Model.NombreCurso</dd>

                    <dt class="col-sm-4">Instructor</dt>
                    <dd class="col-sm-8">
                        @(Model.Instructor?.NombreInstructor ?? "Sin instructor asignado")
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="card-footer">
        <div class="d-flex justify-content-between align-items-center">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Volver al listado
            </a>

            <a asp-action="Edit" asp-route-id="@Model.IdCurso" class="btn btn-cfe">
                <i class="bi bi-pencil"></i> Editar
            </a>
        </div>
</div>

@section Styles {
    <style>
        .bg-cfe {
            background-color: #008a54 !important;
        }

        .btn-cfe {
            background-color: #008a54 !important;
            color: white !important;
            border: none !important;
        }

            .btn-cfe:hover {
                background-color: #006f45 !important;
                color: white !important;
            }

        /* Estilo adicional para la lista de descripción */
        dl.row dt {
            font-weight: 600;
            color: #555;
        }

        dl.row dd {
            margin-bottom: 0.5rem;
        }
    </style>
}