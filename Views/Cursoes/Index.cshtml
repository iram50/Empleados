@model IEnumerable<CFE.Models.Curso>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreCurso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instructor.NombreInstructor) <!-- Mostrar el nombre del Instructor -->
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreCurso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Instructor.NombreInstructor) <!-- Mostrar el nombre del Instructor -->
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdCurso" class="btn btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.IdCurso" class="btn btn-secondary">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.IdCurso" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

