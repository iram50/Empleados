@model CFE.Models.Curso

@{
    ViewData["Title"] = "Crear Nuevo Curso";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-6">
                <i class="bi bi-book"></i> @ViewData["Title"]
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-cfe text-white">
                    <!-- Cambiado a bg-cfe -->
                    <h5 class="mb-0">
                        <i class="bi bi-plus-circle"></i> Información del Curso
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-4">
                            <label asp-for="NombreCurso" class="form-label fw-bold">Nombre del Curso</label>
                            <input asp-for="NombreCurso" class="form-control" />
                            <span asp-validation-for="NombreCurso" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Id_Instructor" class="form-label fw-bold">Instructor</label>
                            <select asp-for="Id_Instructor" class="form-control" asp-items="ViewBag.Instructores">
                                <option value="">Seleccione un instructor</option>
                            </select>
                            <span asp-validation-for="Id_Instructor" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary me-3">
                                <i class="bi bi-arrow-left"></i> Volver al listado
                            </a>
                            <button type="submit" class="btn btn-cfe px-4">
                                <!-- Cambiado a btn-cfe -->
                                <i class="bi bi-save"></i> Crear
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .bg-cfe {
            background-color: #008a54 !important; /* Verde corporativo CFE */
        }

        .btn-cfe {
            background-color: #008a54 !important;
            color: white !important;
            border: none !important;
        }

            .btn-cfe:hover {
                background-color: #006f45 !important; /* Verde más oscuro al pasar el mouse */
                color: white !important;
            }

        .form-control {
            padding: 0.5rem 0.75rem;
            border-radius: 0.25rem;
            border: 1px solid #ced4da;
        }

            .form-control:focus {
                border-color: #008a54;
                box-shadow: 0 0 0 0.25rem rgba(0, 138, 84, 0.25);
            }

        .btn {
            padding: 0.5rem 1.25rem;
            margin: 0.25rem 0;
            font-weight: 500;
        }

        .btn-outline-secondary {
            border-width: 2px;
        }

        .card {
            border-radius: 0.5rem;
            border: none;
        }

        .card-header {
            font-weight: 600;
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}